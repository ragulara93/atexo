{% extends 'base.html.twig' %}

{% block title %}Hello CardController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto;  width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <table>
        <thead>
        <tr>
            <th colspan="4">Order of symbols</th>
        </tr>
        </thead>
        <tbody>
        <tr style="border: 1px solid black; border-collapse: collapse;">
            {% for symbol in symbolOrderingStructure %}
                <td style="border: 1px solid black;">{{ symbol }}</td>
            {% endfor %}
        </tr>
        </tbody>
    </table>

    <table>
        <thead>
        <tr>
            <th colspan="10">Order of Values</th>
        </tr>
        </thead>
        <tbody>
        <tr style="border: 1px solid black; border-collapse: collapse;">
            {% for value in valueOrderingStructure %}
                <td style="border: 1px solid black;">{{ value }} </td>
            {% endfor %}
        </tr>
        </tbody>
    </table>


    <table>
        <thead>
        <tr>
            <th colspan="10">Init cards</th>
        </tr>
        </thead>
        <tbody>
        <tr style="border: 1px solid black; border-collapse: collapse;">
            {% for card in firstCardSet %}
                <td style="border: 1px solid black;">{{ card.value }} - {{ card.symbol }}</td>
            {% endfor %}
        </tr>
        </tbody>
    </table>

    <table>
        <thead>
        <tr>
            <th colspan="10">Init cards</th>
        </tr>
        </thead>
        <tbody>
        <tr style="border: 1px solid black; border-collapse: collapse;">
            {% for sortedCard in sortedCards %}
                <td style="border: 1px solid black;">{{ sortedCard.value }} - {{ sortedCard.symbol }}</td>
            {% endfor %}
        </tr>
        </tbody>
    </table>
</div>
{% endblock %}
